{
  "name": "QuickDeck",
  "description": "Personal flash cards in your browser!",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "300": "images/icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css":  [
        "css/content.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "QuickDeck",
    "default_popup": "popup.html"
  },
  "permissions": [
    "<all_urls>",
    "notifications",
    "storage",
    "https://kgsearch.googleapis.com/*"
  ],
  "content_security_policy": "script-src 'self' kgsearch.googleapis.com"
}
